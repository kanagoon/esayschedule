<h1>EasySchedule</h1>
<h3>予定詳細</h3>
<div class="post">
  <p><%= @post.title %></p>
  <p><%= @post.created_at %></p>

  <% if user_signed_in? %>
      <% if current_user.already_liked?(@post) %>
          <%= link_to post_like_path(@post), method: :delete do %>
            <i class="fas fa-heart"></i><%= @post.likes.count %>
          <% end %>
      <% else %>
          <%= link_to post_likes_path(@post), method: :post do %>
            <i class="far fa-heart"></i><%= @post.likes.count %>
          <% end %>
      <% end %>
  <% else %>
      <i class="far fa-heart"></i><%= @post.likes.count %>
  <% end %>
</div>

<% if user_signed_in? %>
  <% if current_user.already_doned?(@post) %>
      <%= link_to post_done_path(@post), method: :delete do %>
        <i class="fas fa-check-circle"></i><%= @post.dones.count %>
      <% end %>
  <% else %>
      <%= link_to post_dones_path(@post), method: :post do %>
        <i class="far fa-check-circle"></i><%= @post.dones.count %>
      <% end %>
  <% end %>
<% else %>
<i class="far fa-check-circle"></i><%= @post.dones.count %>
<% end %>

<h2>いいねしたユーザー</h2>
<% @post.liked_users.each do |user| %>
  <li><%= user.email %></li>
<% end %>

<div class="comment-wrapper">
  <p>コメント一覧</p>
  <% @comments.each do |c| %>
    <div>
      <%= c.user.email unless c.user.blank? %>
      <br>
      <%= c.content %>
    </div>
      <br>
  <% end %>

  <% if user_signed_in? %>
    <%= form_with(model: [@post, @comment], local: true) do |f| %>
      <%= f.text_area :content %>
      <%= button_tag type: "submit" do %>
        <i class="far fa-comments"></i> コメントする
      <% end %>
    <% end %>
  <% end %>
</div>

<%= link_to "新規投稿へ", new_post_path %>
<%= link_to "編集する", edit_post_path(@post.id) %>